{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
        "no-duplicate-imports": "error",
        "no-var": "error",
        "no-redeclare": "error",
        "no-unused-vars": "warn",
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        "no-multi-spaces": "off",
        "key-spacing": ["error", { "beforeColon": false, "afterColon": true, "mode": "minimum" }],
        "max-len": ["error", 120],
        "new-cap": ["error", {"capIsNew": false}],
        "no-invalid-this": "off"
    }
}
