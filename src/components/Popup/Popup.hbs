<div class="popup-wrapper">
    <div class="popup-container">
        <form class="popup-container__form">
            <h1 class="popup-container__heading">{{heading}}</h1>
            <div class="inputs-container">
                {{#each inputs}}
                    {{{this}}}
                {{/each}}

                {{{Button}}}
            </div>

            <div class="popup-helper">
                <p class="popup-helper__text">{{helper.text}}
                    <a class="popup-helper__link" href="{{helper.link}}">{{helper.linkText}}</a>
                </p>
            </div>
        </form>
    </div>
</div>
