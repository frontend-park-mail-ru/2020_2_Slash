<div class="player__container">
    <div class="player__wrapper">
        <div class="player__timeline">
            <div class="timeline__back"></div>
            <p class="timeline__time-text"></p>
            <div class="timeline__slider"></div>
            <div class="timeline__middle"></div>
            <div class="timeline__front"></div>
        </div>
        <div class="player__player-bar">
            <button class="player-bar__play-btn player-bar__btn" data-event="videoPause">
                <img class="player-play-btn__img player-btn__img" src="/static/img/player-pause.svg">
            </button>
            <button class="player-bar__prev-btn player-bar__btn">
                <img class="player-btn__img" src="/static/img/player-prev.svg">
            </button>
            <button class="player-bar__next-btn player-bar__btn">
                <img class="player-btn__img" src="/static/img/player-next.svg">
            </button>
            <div class="player-bar__volume">
                <button class="player-bar__volume-btn player-bar__btn" data-event="mute">
                    <img class="player-btn__img volume-btn__img" src="/static/img/player-sound.svg">
                </button>
                <input class="player-bar__volume-bar" min="0" max="1" value="0.5" step="0.01" type="range">
            </div>
            <span class="player-bar__time">0:0/0:0</span>
            {{#if type}}
                <span class="player-bar__title">{{{title}}}</span>
            {{else}}
                <span class="player-bar__title">{{{title}}}</span>
                <span class="player-bar__episode-title">{{{name}}}</span>
                <span class="player-bar__episode-number">S{{{season}}} : E{{{episode}}}</span>
            {{/if}}
            <span class="player-bar__span"></span>
            {{#if type}}
                <button class="player-bar__fullscreen-btn player-bar__btn" data-event="fullscreenModeOn">
                    <img class="fullscreen-btn__img player-btn__img" src="/static/img/player-fullscreen.svg">
                </button>
            {{else}}
                <button class="player-bar__next-content-btn player-bar__btn" data-event="playNextContent">
                    <img class="next-content-btn__img player-btn__img" src="/static/img/player-next-content.svg">
                </button>
                <button class="player-bar__fullscreen-btn player-bar__btn" data-event="fullscreenModeOn">
                    <img class="fullscreen-btn__img player-btn__img" src="/static/img/player-fullscreen.svg">
                </button>
            {{/if}}
        </div>
    </div>
</div>
