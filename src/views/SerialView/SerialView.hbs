<div class="serials-view">
    <div class="serials__banner pad-both">
        <div class="serials-title"><a href="/serials " class="list-item-text" data-event="pathChanged">Сериалы</a></div>
        {{#if singleGenre}}
            <div class="genres">
                <div class="genre__label"> >   {{{Genre}}}</div>
            </div>
        {{else}}
            <div class="genres">
                <button class="genres-btn" data-event="openSubMenuGenres" data-modalstatus="genresModal">
                    <div class="genres-btn__label">{{{Genre}}}</div>
                    <img class="genres-btn__arrow" src="/static/img/arrow.svg" loading="lazy">
                </button>
                {{{SubMenu}}}
            </div>
        {{/if}}
    </div>
    <div class="serial-view-content">
        {{{Preview}}}
        {{{Content}}}
    </div>
</div>
